        <!-- Product 1 -->
    <androidx.cardview.widget.CardView
        android:layout_width="340dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/dark_purple"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/frag_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mobo"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/frag_name"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="frag_name"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/whitish_yellow"
                app:layout_constraintStart_toEndOf="@id/frag_img"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/frag_price"/>

            <TextView
                android:id="@+id/frag_price"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="price etc"
                android:textSize="13sp"
                android:textColor="@color/whitish_yellow"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@+id/frag_name"
                app:layout_constraintStart_toEndOf="@id/frag_img"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

