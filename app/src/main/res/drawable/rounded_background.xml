<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_purple"/> <!-- Background color -->
            <corners android:radius="50dp"/> <!-- Corner radius -->
        </shape>
    </item>
    <item android:top="100dp" android:right="100dp" android:bottom="100dp" android:left="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent color -->
        </shape>
    </item>
</layer-list>